# VolTracker Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# Supabase Configuration (Required)
# ==============================================
# Your Supabase project URL
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key (safe to expose in client)
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==============================================
# Tesla Fleet API Configuration (Required)
# ==============================================
# Tesla Fleet API Client ID (safe to expose in client)
REACT_APP_TESLA_CLIENT_ID=your_tesla_client_id_here
EXPO_PUBLIC_TESLA_CLIENT_ID=your_tesla_client_id_here

# Tesla OAuth Redirect URI (must match your domain)
REACT_APP_TESLA_REDIRECT_URI=https://www.voltracker.com/auth/callback
EXPO_PUBLIC_TESLA_REDIRECT_URI=https://www.voltracker.com/auth/callback

# ==============================================
# Tesla Fleet API Secrets (NEVER COMMIT THESE)
# ==============================================
# WARNING: These are sensitive credentials - only use on server side
# Tesla Client Secret (NEVER expose in client-side code)
TESLA_CLIENT_SECRET=your_tesla_client_secret_here

# Tesla Private Key Path (for JWT signing)
TESLA_PRIVATE_KEY_PATH=./private-key.pem

# ==============================================
# Environment Configuration
# ==============================================
# Development environment
NODE_ENV=development

# App Version
REACT_APP_VERSION=0.0.1
EXPO_PUBLIC_VERSION=0.0.1

# ==============================================
# Web Application URLs (for production)
# ==============================================
# Primary domain for Tesla OAuth
REACT_APP_DOMAIN=www.voltracker.com
EXPO_PUBLIC_DOMAIN=www.voltracker.com

# ==============================================
# Development/Debug Settings
# ==============================================
# Set to 'true' to enable debug logging
REACT_APP_DEBUG=false
EXPO_PUBLIC_DEBUG=false

# Supabase RLS bypass for development (use with caution)
REACT_APP_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here_if_needed

# ==============================================
# Platform Specific Settings
# ==============================================
# Deep linking scheme for mobile apps
EXPO_PUBLIC_DEEP_LINK_SCHEME=voltracker

# Bundle identifier for iOS
IOS_BUNDLE_ID=com.voltracker.app

# Package name for Android  
ANDROID_PACKAGE_NAME=com.voltracker.app